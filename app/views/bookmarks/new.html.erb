<%= simple_form_for [@category, @bookmark] do |f| %>
  <div class="card">
    <div class="card-header">
      <h2>Add a Bookmark</h2>
    </div>
    <div class="card-body">
      <%= f.association :recipe %>
      <%= f.input :comment, label: "Comment" %>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>