<div class="polite-card" id="bookmark-card">
    <img src="<%= bookmark.recipe.image_url %>" class="card-img-top-bookmark" alt="<%= bookmark.recipe.name %>">
        <div class="css-card">
            <%= link_to bookmark.recipe.name, class: "card-title" %>
             <p class="card-text" style="margin-bottom: -5px; margin-top: 20px"><strong>Rating:</strong> <%= bookmark.recipe.rating %></p>
             <p class="card-text"><strong>Comment:</strong> <%= bookmark.comment %></p>
            <%= link_to 'Delete', category_bookmark_path(@category, bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </div>
</div>