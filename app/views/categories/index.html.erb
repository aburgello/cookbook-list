<div class="container moody">
    <div class="banner mt-2">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" alt="Banner Image" class="banner-image">  
    <h1 style="padding: 10px;">Categories</h1>
  </div>
  <div class="card-container">
    <% @categories.each do |category| %>
      <div class="polite-card mt-4">
        <div class="card-header-index">
        <%= link_to category.name, category %>
        <img src="https://cdn-icons-png.flaticon.com/512/4901/4901689.png" class="card-img-top" alt="<%= category.name %>">
        </div>
        <div class="card-body" style="padding: 10px 25px;">
        <p>Lorem Ipsum</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end">
    <%= link_to 'New Category', new_category_path, class: "btn btn-primary btn btn-primary btn-lg btn-block crispy-fill" %>
  </div>
</div>
