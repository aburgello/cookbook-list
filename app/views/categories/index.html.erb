<div class="container moody">
    <div class="banner mt-2">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" alt="Banner Image" class="banner-image">  
    <h1 style="padding: 12px;">Welcome to your Personal Cookbook</h1>
  </div>
  <div class="card-container">
    <% @categories.each do |category| %>
      <div class="polite-card mt-4">
        <div class="card-header-index">
        <%= link_to category.name, category %>
        <img src="<%= category.image_url %>" class="card-img-top" alt="<%= category.name %>">
        </div>
        
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end mt-2">
    <%= link_to 'New Category', new_category_path, class: "btn btn-primary btn btn-primary btn-lg btn-block crispy-fill" %>
  </div>
</div>
