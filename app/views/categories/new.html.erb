<div class="card">
  <div class="card-header">
    <h2>New Category</h2>
  </div>
  <div class="card-body">
    <%= simple_form_for @category do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to 'Back', categories_path, class: "btn btn-secondary" %>
  </div>
</div>